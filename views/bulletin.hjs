<!DOCTYPE html>
<html>
	<head>
		<title>{{ title }}</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
		<link rel='stylesheet' href='/stylesheets/style.css' />
	</head>
	<body>
		<nav class="navbar navbar-light bg-light">
		  	<span class="navbar-brand mb-0 h1">{{familyName}}</span>
		</nav>
		<div class='container' id='bulletin'>
		</div>
		<form action='/post' method='post'>
			<button action='/post' type="button" class="btn btn-secondary float" onclick="window.location.href='\post'">Add Post</button>	
		</form>
		
		
		<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.js"></script>
		<!-- The core Firebase JS SDK is always required and must be listed first -->
		<!-- <script src="/__/firebase/7.14.0/firebase-app.js"></script> -->

		<!-- TODO: Add SDKs for Firebase products that you want to use
		     https://firebase.google.com/docs/web/setup#available-libraries -->
		<!-- <script src="/__/firebase/7.14.0/firebase-analytics.js"></script> -->

		<!-- Initialize Firebase -->
		<!-- <script src="/__/firebase/init.js"></script> -->
		<script type="text/javascript">

			fetch('/users/1')
			.then((resp) => resp.json()) // Transform the data into json
  			.then(function(data) { data.forEach(d => addCard(d))})
			
			function addCard(data) {
				var html = '<div class="card mt-3">' + '<div class="card-header">' + data['title'] + '</div>' + '<div class="card-body"> <blockquote class="blockquote mb-0"> <p>' + data['content'] + '</p> <footer class="blockquote-footer">' + data['name'] + '  <cite title="Source Title">' + Date(data['timestamp']) + '</cite></footer></blockquote></div></div>'
				document.getElementById('bulletin').insertAdjacentHTML('beforeend', html);
			}
			
		</script>

	</body>
</html>